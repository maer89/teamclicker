# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/admin						controllers.Application.admin()
GET		/question					controllers.Application.question()
GET		/index						controllers.Application.index()
GET		/adminarea					controllers.Application.adminarea()
GET		/result						controllers.Application.result()
GET		/save						controllers.Application.saveMessage()
GET		/enable						controllers.Application.enable()
GET		/disable					controllers.Application.disable()
GET		/delete						controllers.Application.delete()
GET		/getMessage					controllers.Application.getMessage()
GET		/saveChanges				controllers.Application.saveChanges()
GET		/updateTable				controllers.Application.updateTable()
GET		/getQuestion				controllers.Application.getQuestion(id: Integer, pw: String)
POST	/checkQuestion				controllers.Application.checkQuestion()
POST	/getAnswers					controllers.Application.getAnswers()
POST	/sendAnswer					controllers.Application.sendAnswer()
POST	/login						controllers.Application.login()
GET		/loadMessages				controllers.Application.loadMessages()
GET		/outcome					controllers.Application.outcome()
POST	/loadGroups					controllers.Application.loadGroups()
POST	/addGroup					controllers.Application.addGroup()
POST	/deleteGroup				controllers.Application.deleteGroup()
POST	/resetAnswers				controllers.Application.resetAnswers()
POST	/checkEmail					controllers.Application.checkEmail()
POST	/checkUsername				controllers.Application.checkUsername()
POST	/writeUserToDB				controllers.Application.writeUserToDB()
GET		/db_install					controllers.Application.dbInstall()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
